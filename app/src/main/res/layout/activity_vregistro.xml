<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VRegistro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="657dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:height="30sp"
            android:text="Registro de usuarios"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/rc_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30sp"
            android:width="300sp"
            android:height="20sp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rc_apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:width="300sp"
            android:height="20sp"
            android:ems="10"
            android:hint="apellidos"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rc_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:width="300sp"
            android:height="20sp"
            android:ems="10"
            android:hint="telefono"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rc_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:width="300sp"
            android:height="20sp"
            android:ems="10"
            android:hint="correo"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rc_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:width="300sp"
            android:height="20sp"
            android:ems="10"
            android:hint="usuario"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rc_contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:width="300sp"
            android:height="20sp"
            android:ems="10"
            android:hint="contraseña"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rc_no_contrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="20sp"
            android:width="300sp"
            android:height="20sp"
            android:ems="10"
            android:hint="Numero de contrato"
            android:inputType="text"
            android:textSize="14sp" />

        <Button
            android:id="@+id/rb_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30sp"
            android:width="300sp"
            android:text="Registrar" />

        <Button
            android:id="@+id/rb_cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:text="cancelar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>